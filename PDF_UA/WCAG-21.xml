            <test>(correctType == 'TD' &amp;&amp; correctSemanticScore >= 0.75) || correctType == 'TR' ||
                correctType == 'TH' || correctType == 'TBody' || correctType == 'THead' ||
                correctType == 'TFoot' || correctType == 'Table' || correctType == null</test>
            <error>
